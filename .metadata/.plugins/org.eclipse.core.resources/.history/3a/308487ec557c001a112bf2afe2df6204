package one.innovation.digital.datas;

import java.text.SimpleDateFormat;
import java.time.LocalDateTime;

public class ExercicioFinalDatas {

	public static void main(String[] args) {

		// Exercicio Final
		LocalDateTime agoraEf = LocalDateTime.of(2010, 05, 15, 10, 00, 00);
		// DateTimeFormatter format = DateTimeFormatter.ofPattern("dd/MM/yyy hh:mm:ss");
		SimpleDateFormat format = SimpleDateFormat("dd/MM/yyy HH:mm:ss");
		String dataFormatada = format.format(agoraEf);
		System.out.println(dataFormatada);
		System.out.println("------------------------");
		// LocalDateTime futuro = dataFormatada		

	}

}
